{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "outDir": "dist",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/"],
            "typings/*": ["src/typings/*"]
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve"
    },
    "exclude": ["src/test/**/*.spec.ts", "**/*.test.ts", "**/__mocks__/"]
}
